{
  "name": "ban-sensitive-files",
  "description": "Checks filenames to be committed against a library of filename rules to prevent sensitive files in Git",
  "main": "src/ban.js",
  "bin": {
    "ban": "bin/ban.js",
    "ban-sensitive-files": "bin/ban.js",
    "sensitive-files": "bin/ban.js",
    "ban-sensitive": "bin/ban.js",
    "no-sensitive": "bin/ban.js",
    "no-way": "bin/ban.js"
  },
  "version": "1.9.0",
  "scripts": {
    "test": "node --harmony node_modules/.bin/rocha src/*-spec.js",
    "ban": "node --harmony bin/ban.js",
    "commit": "git-issues && commit-wizard",
    "issues": "git-issues",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "lint": "standard --verbose --fix bin/*.js src/*.js"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/ban-sensitive-files.git"
  },
  "keywords": [
    "npm",
    "git",
    "github",
    "security",
    "sensitive",
    "confidential",
    "commit",
    "prevent",
    "secure",
    "private",
    "key"
  ],
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "license": "MIT",
  "files": [
    "git-deny-patterns.json",
    "bin",
    "src/*.js",
    "!src/*-spec.js"
  ],
  "bugs": {
    "url": "https://github.com/bahmutov/ban-sensitive-files/issues"
  },
  "homepage": "https://github.com/bahmutov/ban-sensitive-files#readme",
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm run lint",
        "node --harmony bin/ban.js"
      ],
      "pre-push": [
        "npm test",
        "npm run size"
      ],
      "post-commit": [
        "npm test"
      ],
      "post-merge": []
    }
  },
  "devDependencies": {
    "babel-eslint": "7.1.0",
    "git-issues": "1.3.1",
    "pre-git": "3.12.0",
    "rocha": "2.3.0",
    "semantic-release": "6.3.0",
    "standard": "8.6.0"
  },
  "dependencies": {
    "bluebird": "3.4.6",
    "check-more-types": "2.23.0",
    "debug": "2.6.0",
    "ggit": "1.13.6",
    "lazy-ass": "1.5.0",
    "pluralize": "3.0.0",
    "ramda": "0.22.1",
    "update-notifier": "1.0.3"
  }
}